<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.WelcomeActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="50dp"
        app:srcCompat="@drawable/turbo_lab" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="320dp"
        android:layout_height="120dp"
        android:layout_marginVertical="50dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/source_sans_pro_regular"
        android:padding="5dp"
        android:text="Turbonomic Labs provides apps and tools built by our engineers for you to explore"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/txtLicenseLink"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:linksClickable="true"
        android:padding="5dp"
        android:text="License Agreement"
        android:textAlignment="center"
        android:textColor="@color/colorBlue"
        android:textSize="23dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnWelcomeOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:background="@color/colorMainBg2"
        android:text="OK"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLicenseLink" />

</android.support.constraint.ConstraintLayout>